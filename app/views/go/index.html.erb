<body class="indexpage">

<div class="row col-xs-10 col-xs-offset-1">
<div class="page-header col-xs-12 text-center ">
<h1 class="resultspageheader ">the links you've been saving.</h1>
</div>

<div class="col-xs-12 text-center">
<%= button_to "I need to shorten a new link.", {controller: :go, action: :new, url: go_new_path}, method: :get, class: "btn btn-success lora"%>
</div>

</div>


<div class="row col-xs-10 col-xs-offset-1">
<br/>
<div class="col-xs-12">
  <h5 class="text-center">
    <%= flash[:notice] %>
  </h5>
</div>
</div>

<div class="row col-xs-12">

<% @links.each do |link| %>
  <div>
  <div class="transparentdiv col-xs-5 col-xs-offset-1 col-sm-3 col-sm-offset-1 col-md-3 col-md-offset-1 col-lg-3 col-lg-offset-1 lora text-center">
    <br />
        <p>- your link -</p>
      <h3 class="resultspagetext">
        <a href="/go/<%=link.rand_str %>/preview">
        <strong><%= link.rand_str %></strong>
        </a>
      </h3>
      <p>created:<br /><%= localize(link.created_at, format: :short)%></p>

      <h1 class="resultspagetext"><%= link.counter %> x</h1>
      <p> -------- </p>
  </div>
  </div>
<% end %>

</div>
</body>
